{
  "name": "reffering-server",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:watch": "ts-node-dev --watch src/**/*.ts src/index.ts",
    "dev": "run-p start:watch format:watch",
