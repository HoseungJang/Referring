  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "fp-ts": "^2.8.2",
    "io-ts": "^2.2.10",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.10.1",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  }
